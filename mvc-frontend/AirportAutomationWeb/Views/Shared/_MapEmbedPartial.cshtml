@using System.Net;

@{
	var address = ViewData["MapAddress"]?.ToString();
}

<iframe src="https://maps.google.com/maps?q=@WebUtility.UrlEncode(address)&output=embed&hl=en"
		style="width: 100%; height: 320px; border: 0; border-radius: 0.375rem;"
		allowfullscreen=""
		loading="lazy"
		referrerpolicy="no-referrer-when-downgrade"
		title="Google Map">
</iframe>