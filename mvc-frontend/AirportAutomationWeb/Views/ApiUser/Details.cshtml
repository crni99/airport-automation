@model AirportAutomation.Web.Models.ApiUser.ApiUserViewModel;

@{
	ViewBag.Title = "Api User Details";
}

@if (ViewBag.ApiUserRole == "SuperAdmin")
{
	<div>
		<h4>Airline Details</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2 mt-2">
				@Html.DisplayNameFor(model => model.Id)
			</dt>
			<dd class="col-sm-10 mt-2">
				@Html.DisplayFor(model => model.Id)
			</dd>
			<dt class="col-sm-2 mt-2">
				@Html.DisplayNameFor(model => model.UserName)
			</dt>
			<dd class="col-sm-10 mt-2">
				@Html.DisplayFor(model => model.UserName)
			</dd>
			<dt class="col-sm-2 mt-2">
				@Html.DisplayNameFor(model => model.Password)
			</dt>
			<dd class="col-sm-10 mt-2">
				@Html.DisplayFor(model => model.Password)
			</dd>
			<dt class="col-sm-2 mt-2">
				@Html.DisplayNameFor(model => model.Roles)
			</dt>
			<dd class="col-sm-10 mt-2">
				@Html.DisplayFor(model => model.Roles)
			</dd>
		</dl>
	</div>
	@if (TempData["AlertMessage"] != null)
	{
		@await Html.PartialAsync("_AlertPartial", TempData)
	}
	<div>
		@await Html.PartialAsync("_EditButtons", Model)
	</div>
}
else
{
	@await Html.PartialAsync("_ForbiddenAccess")
}